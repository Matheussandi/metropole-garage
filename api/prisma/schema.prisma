generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Player {
  id       Int       @id @default(autoincrement())
  name     String
  isAdmin  Boolean   @default(false)
  vehicles Vehicle[]
}

model Vehicle {
  id       Int     @id @default(autoincrement())
  plate    String  @unique
  color    String
  owner    String
  Player   Player? @relation(fields: [playerId], references: [id])
  playerId Int?
}
